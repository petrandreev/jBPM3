<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false" default-access="field">
  <subclass name="org.jbpm.context.exe.variableinstance.HibernateLongInstance" 
            extends="org.jbpm.context.exe.VariableInstance" 
            discriminator-value="H">
    <any name="value" id-type="long" cascade="save-update">
      <column name="LONGIDCLASS_" />
      <column name="LONGVALUE_" />
    </any>
  </subclass>
</hibernate-mapping>
